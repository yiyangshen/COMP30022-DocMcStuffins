{
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "preset": "ts-jest",
    "roots": [
        "<rootDir>/src",
        "<rootDir>/tests"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
        "<rootDir>/dist/",
        "<rootDir>/node_modules/",
        "<rootDir>/src/"
    ],
    "verbose": true
}
